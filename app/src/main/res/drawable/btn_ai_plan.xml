<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#7B1FA2"
        android:endColor="#7B1FA2"
        android:angle="45"/>



    <!-- Rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Padding for better elevation look -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp"/>
</shape>
