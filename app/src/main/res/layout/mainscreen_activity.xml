<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0C10">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Outer Container with glowing border -->
            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_container"
                android:padding="16dp">

                <!-- Top Bar -->
                <LinearLayout
                    android:id="@+id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivMenu"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_menu"
                        android:tint="#FFFFFF" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_person"
                        android:tint="#FFFFFF"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="August 2025"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:paddingBottom="12dp"/>

                <!-- Calendar -->
                <HorizontalScrollView
                    android:id="@+id/horizontalCalendarScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:id="@+id/calendarRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"/>
                </HorizontalScrollView>

                <!-- Activity & Streak -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activity"
                        android:textColor="#00E5FF"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/streak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔥 3-Day Streak"
                        android:textColor="#FF9100"
                        android:textSize="30sp"/>
                </LinearLayout>

                <!-- Metrics Grid -->
                <GridLayout
                    android:id="@+id/metricsGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:layout_marginBottom="16dp">

                    <!-- Steps -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/bg_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="👣 Steps"
                            android:textColor="#00E5FF"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8,543"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                    </LinearLayout>

                    <!-- Heart Rate -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/bg_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="❤️ Heart Rate"
                            android:textColor="#FF4B2B"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="78 bpm"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                    </LinearLayout>

                    <!-- Body Oxygen -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/bg_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🫁 SpO₂"
                            android:textColor="#00E5FF"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="97%"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                    </LinearLayout>

                    <!-- Calories -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/bg_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🔥 Calories"
                            android:textColor="#FF9100"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="345 kcal"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </GridLayout>

                <!-- Reminders -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminders"
                    android:textColor="#00E5FF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Sleep Reminder -->
                    <EditText
                        android:id="@+id/editSleep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="💤 Set Sleep Time"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#80FFFFFF"
                        android:focusable="false"
                        android:cursorVisible="false"
                        android:background="@drawable/bg_card"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Water Reminder -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💧 Drink Water (8 glasses)"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_card"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Workout Reminder -->
                    <EditText
                        android:id="@+id/editWorkout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="🏋️ Set Workout Time"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#80FFFFFF"
                        android:focusable="false"
                        android:cursorVisible="false"
                        android:background="@drawable/bg_card"
                        android:padding="12dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1E1E1E"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
