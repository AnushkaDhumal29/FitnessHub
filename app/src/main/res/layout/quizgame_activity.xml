<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/bg_gradient">

    <!-- Quiz Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#AA1E1E2F">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‹ï¸ Fitness Quiz"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: 0"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:textSize="16sp"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <!-- Question -->
            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Which exercise burns the most calories in 30 minutes?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_question_card"
                android:padding="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Options -->
            <Button
                android:id="@+id/btnOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸƒ Running"
                android:textSize="17dp"
                style="@style/QuizButtonStyle" />

            <Button
                android:id="@+id/btnOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŠ Swimming"
                android:textSize="17dp"
                style="@style/QuizButtonStyle" />

            <Button
                android:id="@+id/btnOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš´ Cycling"
                android:textSize="17dp"
                style="@style/QuizButtonStyle" />

            <Button
                android:id="@+id/btnOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ§˜ Yoga"
                android:textSize="17dp"
                style="@style/QuizButtonStyle" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
