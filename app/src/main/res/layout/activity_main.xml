<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Fullscreen video background -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:clickable="false" />

    <!-- Dim overlay for readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Center card -->
    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_panel"
        android:padding="12dp"
        android:orientation="vertical">

        <!-- Segmented toggle for login/register -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/seg_container"
            android:padding="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rgTabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tabLogin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Log in"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/seg_text_selector"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/seg_left_selector"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/tabRegister"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/seg_text_selector"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/seg_right_selector" />
            </RadioGroup>
        </LinearLayout>

        <!-- ViewFlipper containing Login & Register forms -->
        <ViewFlipper
            android:id="@+id/authFlipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out"
            android:layout_marginTop="16dp">

            <!-- LOGIN FORM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etLoginUser"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:hint="Email"
                    android:background="@drawable/et_neon"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="#FF4B2B"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/etLoginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:hint="Password"
                    android:background="@drawable/et_neon"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/white"
                    android:textColorHint="#FF4B2B"
                    android:inputType="textPassword" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="18dp"
                    android:text="Log in"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="#FF4B2B" />

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/signInButtonLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>

            <!-- REGISTER FORM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etRegUser"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:hint="Username"
                    android:background="@drawable/et_neon"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/white"
                    android:textColorHint="#FF4B2B"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/etRegEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:hint="Email"
                    android:background="@drawable/et_neon"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/white"
                    android:textColorHint="#FF4B2B"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/etRegPassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:hint="Password"
                    android:background="@drawable/et_neon"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/white"
                    android:textColorHint="#FF4B2B"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:hint="Confirm Password"
                    android:background="@drawable/et_neon"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/white"
                    android:textColorHint="#FF4B2B"
                    android:inputType="textPassword" />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="18dp"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="#FF4B2B" />

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/signInButtonRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>

        </ViewFlipper>
    </LinearLayout>

</FrameLayout>
